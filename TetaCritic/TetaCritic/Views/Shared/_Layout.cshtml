<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/footerstyle.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow">

            <a class="navbar-brand ml-5" asp-controller="Home" asp-action="Anasayfa">
                <img src="~/images/logo.png" width="108" height="70" alt="">
            </a>
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item ">
                            <a class="nav-link text-white btn btn-lg" asp-area="" asp-controller="Home" asp-action="Anasayfa" asp-route-id="">Ana Sayfa  </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-white btn btn-lg" asp-area="" asp-controller="Home" asp-action="KategoriMenusu" asp-route-id="">Kategoriler  </a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                    @if (User.IsInRole("Admin"))
                    {
                    <li class="nav-item">
                        <a class="nav-link text-white btn btn-lg ml-2" asp-area="" asp-controller="Film" asp-action="Index">Admin Paneli</a>
                    </li>
}}

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div class="footer-top">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 footer-about">
                        <p>
                            Bu site, Furkan İsmet Tufan ve Alaattin Gökmen Kuleyin tarafından yapılmıştır.
                        </p>
                    </div>
                    <div class="col-md-4 offset-md-1 footer-contact">
                        <h3>İletişim</h3>
                        <p><i class="fa fa-envelope"></i><a href="mailto:furkan.tufan@ogr.sakarya.edu.tr">furkan.tufan@ogr.sakarya.edu.tr</a></p>
                        <p><i class="fa fa-envelope"></i><a href="mailto:alaattin.kuleyin@ogr.sakarya.edu.tr">alaattin.kuleyin@ogr.sakarya.edu.tr</a></p>
                    </div>
                    <div class="col-md-4 footer-links">
                        <div class="row">
                            <div class="col-5 text-center">
                                <h3><a asp-action="KategoriMenusu" asp-controller="Home" asp-route-id="">Kategoriler</a></h3>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <p><a asp-action="KategoriMenusu" asp-controller="Home" asp-route-id="2">Animasyon</a></p>
                                <p><a asp-action="KategoriMenusu" asp-controller="Home" asp-route-id="3">Aksiyon</a></p>
                                <p><a asp-action="KategoriMenusu" asp-controller="Home" asp-route-id="4">Belgesel</a></p>
                                <p><a asp-action="KategoriMenusu" asp-controller="Home" asp-route-id="5">Bilim Kurgu</a></p>
                            </div>
                            <div class="col-md-4">
                                <p><a asp-action="KategoriMenusu" asp-controller="Home" asp-route-id="7">Dram</a></p>
                                <p><a asp-action="KategoriMenusu" asp-controller="Home" asp-route-id="8">Gerilim</a></p>
                                <p><a asp-action="KategoriMenusu" asp-controller="Home" asp-route-id="9">Komedi</a></p>
                                <p><a asp-action="KategoriMenusu" asp-controller="Home" asp-route-id="10">Korku</a></p>
          
                            </div>
                            <div class="col-md-4">
                                <p><a asp-action="KategoriMenusu" asp-controller="Home" asp-route-id="11">Macera</a></p>
                                <p><a asp-action="KategoriMenusu" asp-controller="Home" asp-route-id="12">Romantik</a></p>
                                <p><a asp-action="KategoriMenusu" asp-controller="Home" asp-route-id="13">Savaş</a></p>
                                <p><a asp-action="KategoriMenusu" asp-controller="Home" asp-route-id="14">Suç</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 footer-copyright">
                        &copy; Copyright 2021 - All Rights Reserved
                    </div>
                    <div class="col-md-6 footer-social">
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
